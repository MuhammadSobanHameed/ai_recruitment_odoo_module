<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="recruitment_industry_form_view" model="ir.ui.view">
            <field name="name">recruitment.industry.form</field>
            <field name="model">recruitment.industry</field>
            <field name="arch" type="xml">
                <form string="Recruitment Industry">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="recruitment_industry_list_view" model="ir.ui.view">
            <field name="name">recruitment.industry.list</field>
            <field name="model">recruitment.industry</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        <record id="industry_details_action" model="ir.actions.act_window">
            <field name="name">Industry</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">recruitment.industry</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="industry_details_menus" name="Industry" parent="hr_recruitment.menu_hr_recruitment_configuration"
                  action="industry_details_action" sequence="3"/>
    </data>
</odoo>
